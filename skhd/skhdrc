# moves focus between windows in the current focused display
alt - j : yabai -m window --focus west
alt - k : yabai -m window --focus south
alt - i : yabai -m window --focus north
alt - l : yabai -m window --focus east

# toggle window split type
alt - s : yabai -m window --toggle split

# rotate tree
alt - r : yabai -m space --rotate 90

# mirror tree y-axis
alt - m : yabai -m space --mirror y-axis

# float / unfloat window and center on screen
alt - t : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# swap window
shift + alt - j : yabai -m window --swap west
shift + alt - k : yabai -m window --swap south
shift + alt - i : yabai -m window --swap north√ö
shift + alt - l : yabai -m window --swap east

# move window
shift + cmd - j : yabai -m window --warp west
shift + cmd - k : yabai -m window --warp south
shift + cmd - i : yabai -m window --warp north
shift + cmd - l : yabai -m window --warp east

# change layout of desktop
alt - b : yabai -m space --layout bsp
alt - f : yabai -m space --layout float

# increase window size
ctrl + alt - j : yabai -m window --resize left:-40:0
ctrl + alt - k : yabai -m window --resize bottom:0:40
ctrl + alt - i : yabai -m window --resize top:0:-40
ctrl + alt - l : yabai -m window --resize right:40:0

# decrease window size
ctrl + alt + cmd - l : yabai -m window --resize left:40:0
ctrl + alt + cmd - i : yabai -m window --resize bottom:0:-40
ctrl + alt + cmd - k : yabai -m window --resize top:0:40
ctrl + alt + cmd - j : yabai -m window --resize right:-40:0

# restart yabai
ctrl + alt + cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"